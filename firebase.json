{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    },
    {
      "source": "python-functions",
      "codebase": "python",
      "ignore": [
        "__pycache__",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        ".pytest_cache"
      ],
      "predeploy": [
        "pip install -r \"$RESOURCE_DIR/requirements.txt\" --target \"$RESOURCE_DIR\""
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
